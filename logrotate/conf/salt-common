su root adm
/var/log/salt/master {
hourly
rotate 35
dateext
dateformat .%Y-%m-%d
copytruncate
compress
delaycompress
compresscmd /usr/bin/xz
compressext .xz
maxage 30
missingok
notifempty
postrotate
  /usr/lib/rsyslog/rsyslog-rotate
endscript
}
