su root adm
/var/log/syslog {
hourly
rotate 30
dateext
dateformat .%Y-%m-%d
copytruncate
compress
delaycompress
compresscmd /usr/bin/xz
compressext .xz
maxage 30
missingok
notifempty
postrotate
  /usr/lib/rsyslog/rsyslog-rotate
endscript
}
